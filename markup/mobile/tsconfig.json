{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"jsx": "preserve",
		"typeRoots": [
			"../../node_modules/@types",
			"../@types"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"$/*": ["../*"],
		},
		"allowJs": true,
	},
	"include": [
		"src/**/*",
		"src/**/*.vue",
		"../@types/**/*",
		"../composables/**/*",
		"../stores/**/*",
		"../utils/**/*",
		// "../env.d.ts",
		// "vite.config.js"
	],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/__tests__/*"
	],
}