{
	"compilerOptions": {
		"target": "es2020",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,// allowSyntheticDefaultImports 자동 적용
		"isolatedModules": true,// 독립적 타입 체크
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"baseUrl": ".",
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"strict": true,// strictFunctionTypes, strictPropertyInitialization 등 포함
		"noImplicitAny": true,// any타입 금지 여부
		"noImplicitReturns": true,// 함수에서 리턴 확인
		"noFallthroughCasesInSwitch": true,// switch문 fallthrough 확인
		// "noUnusedLocals": true,// 사용하지 않는 지역변수 > lint로 대체
		// "noUnusedParameters": true,// 사용하지 않는 파라미터 > lint로 대체
		"forceConsistentCasingInFileNames": true,// 파일 이름 대소문자 구분
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"noEmit": true,// ts 결과물 생성 안함
		"allowImportingTsExtensions": true,
    	"verbatimModuleSyntax": true, // or `isolatedModules`
		"removeComments": true,// 컴파일할 때 주석 제거
	},
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"src/**/__tests__/*"
	],
}